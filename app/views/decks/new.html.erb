<div class="row">
  <div class="col-12">
    <h1>New Deck</h1>
  </div>
  <div class="col-12">
    <%= form_for @deck, html: { class: 'text-center' } do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <%= f.submit class: 'btn btn-dark' %>
    <% end %>
  </div>
</div>
