<div class="row mt-1">
  <div class="col-12">
    <h1>New Deck</h1>
  </div>
  <div class="col-12">
    <%= form_for @deck, html: { class: 'text-center' } do |f| %>
      <div class="form-row">
        <div class="form-group col-8">
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        </div>
        <div class="form-group col-4">
          <%= f.submit class: 'btn btn-block btn-dark' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
