<div class="row mt-1">
  <div class="col-3">
    <%= image_tag @user.gravatar_url(size: 80), class: 'rounded' %>
  </div>
  <div class="col-9">
    <h3><%= @user.name %></h3>
  </div>
  <div class="col-12 mt-3">
    <table class="table">
      <thead>
        <tr>
          <th>Tournaments</th>
          <th>Decks</th>
        </tr>
      </thead>
      <tbody>
        <% @user.participants.each do |participant| %>
          <tr>
            <td><%= link_to participant.tournament.name, participant.tournament %></td>
            <td><%= link_to participant.deck.name, participant.deck %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
