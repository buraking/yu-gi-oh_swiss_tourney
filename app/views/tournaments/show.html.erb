<h3>This is <%= @tournament.name %></h3>

<% if !@tournament.users.find_by(id: current_user.id) %>
  <%= form_for Participant.new(tournament_id: @tournament.id, user_id: current_user.id) do |f| %>
    <%= f.hidden_field :tournament_id %>
    <%= f.hidden_field :user_id %>
    <%= f.submit 'subscribe' %>
  <% end %>
<% else %>
  <table>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
